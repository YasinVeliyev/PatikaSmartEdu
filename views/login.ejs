<%- include('partials/_header'); %>
	<div class="container">
		<div class="section-title text-center">
			<h3 class="mt-5">Login</h3>

			<div class="row">
				<div class="col-xl-12 col-md-12 col-sm-12">
						<% if (locals.flashMessages.errors) { %>
							<div class="alert alert-warning">
								<%- include("partials/_flash",{flashMessages:locals.flashMessages,param:'error'}) %> 
							</div>
						<% } %>
					<div class="contact_form">
						<form method="POST" action="/users/signin">
							<div class="row row-fluid">
								<div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
									<input type="text" name="username" id="username" class="form-control m-0"
										placeholder="Username" />
										<% if (locals.flashMessages.errors) { %>
											<%- include("partials/_flash",{flashMessages:locals.flashMessages,param:'username'}) %> 
										<% } %>
								</div>
								
								<div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
									<input type="password" name="password" id="password" class="form-control m-0"
										placeholder="Password" />
										<% if (locals.flashMessages.errors) { %>
											<%- include("partials/_flash",{flashMessages:locals.flashMessages,param:'password'}) %> 
										<% } %>
								</div>
								<div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
									<button type="submit" value="Login" id="submit"
										class="btn btn-light btn-radius btn-brd grd1 btn-block">
										Login
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
				<!-- end col -->
			</div>
			<!-- end row -->
		</div>
		<!-- end container -->
	</div>
	<!-- end container -->

	<%- include('partials/_footer'); %>