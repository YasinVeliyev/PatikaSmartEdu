<%- include('partials/_header'); %>
    <div class="container">
        <div class="section-title text-center">
            <h3 class="mt-5">REGISTER</h3>

            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12">
                    <div class="contact_form">
                        <div id="message"></div>
                        <form method="POST" action="/users/signup" novalidate>
                            <div class="row row-fluid">
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="text" name="username" id="username" class="form-control m-0"
                                        placeholder="Username" required />
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"username"}) %> 
                                        <% } %>
                                </div>
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="text" name="firstname" id="firstname" class="form-control m-0"
                                        placeholder="First name" required />
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"firstname"}) %> 
                                        <% } %>
                                </div>
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="text" name="lastname" id="lastname" class="form-control m-0"
                                        placeholder="Last name" required />
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"lastname"}) %> 
                                        <% } %>
                                </div>
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="email" name="email" id="email" class="form-control m-0"
                                        placeholder="Email" required />
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"email"}) %> 
                                        <% } %>
                                </div>

                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="password" name="password" id="password" class="form-control m-0"
                                        placeholder="Password" required/>
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"password"}) %> 
                                        <% } %>
                                </div>
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <input type="password" name="confirmpassword" id="confirmpassword"
                                        class="form-control m-0" placeholder="Confirm Password" required />
                                        <% if (locals.flashMessages.errors) { %>
                                            <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:"confirmpassword"}) %> 
                                        <% } %>
                                </div>
                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <select name="role" id="role" class="form-control m-0" required>
                                        <option value="Student">Student</option>
                                        <option value="Teacher">Teacher</option>
                                    </select>
                                    <% if (locals.flashMessages.errors) { %>
                                        <%- include("partials/_flash",{flashMessages:locals.flashMessages,param:'role'}) %> 
                                    <% } %>
                                </div>

                                <div class="offset-1 col-lg-10 col-md-10 col-sm-10 m-2">
                                    <button type="submit" value="Register" id="submit"
                                        class="btn btn-light btn-radius btn-brd grd1 btn-block">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end container -->

    <%- include('partials/_footer'); %>